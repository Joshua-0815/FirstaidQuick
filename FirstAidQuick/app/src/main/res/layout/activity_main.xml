<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_weight="10"
                android:paddingStart="40dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/firstaid_header" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="10"
                android:fontFamily="monospace"
                android:padding="5dp"
                android:text="FirstAid   Quick"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="34sp"
                android:textStyle="bold" />
        </FrameLayout>

        <Button
            android:id="@+id/symptomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Symptoms"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:elevation="4dp"
            android:padding="10dp"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/btnSOS"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:contentDescription="Emergency SOS"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/emergency_icon" /> <!-- Replace with your SOS icon -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="EMERGENCY SOS"
                android:textAlignment="center"
                android:textColor="#D32F2F"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnBurn"
                android:layout_width="match_parent"
                android:contentDescription="Burn"
                android:layout_height="91dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_border"
                android:padding="5dp"
                android:paddingStart="30dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/burnhand" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="40dp"
                android:text="Burn"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/ivHeat"
                android:layout_width="match_parent"
                android:contentDescription="Heat Stroke"
                android:layout_height="91dp"
                android:paddingStart="30dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/heat"
                android:background="@drawable/btn_border"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp"
                android:text="Heat Stroke"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnFever"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:contentDescription="Fever"
                android:paddingStart="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/high_fever" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="High Fever"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageButton
                android:id="@+id/btnFracture"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/fracture" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:text="Fractures"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageButton
                android:id="@+id/btnChoke"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/choke" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:text="Choke"
                android:textAlignment="center"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageButton
                android:id="@+id/btnPoison"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:contentDescription="Food Poison"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/poison" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="Food Poison"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageButton
                android:id="@+id/btnScrape"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:contentDescription="Cuts and scrapes"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/scrape" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="Cuts and scrapes"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageButton
                android:id="@+id/btnStroke"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_border"
                android:contentDescription="Stroke"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/stroke" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:text="Stroke"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- 🚨 SOS Emergency Button -->



    </LinearLayout>
</ScrollView>